---
import BaseLayout from '../layouts/BaseLayout.astro';
import { PROJECT_VERSION } from '../config';

const basePath = import.meta.env.BASE_URL;

const features = [
  {
    title: 'Persistent Storage',
    description: 'Store all messages with full context and metadata. Never lose conversation history again.  Works with PostgreSQL and MongoDB. Choose the database that fits your stack.',
    icon: 'database',
  },
  {
    title: 'Resumable Response Streams',
    description: 'Long lived response streams can survive client reconnects or user device swtiching',
    icon: 'activity',
  },
  {
    title: 'Conversation Forking',
    description: 'Fork conversations at any message to explore alternative paths without losing the original.',
    icon: 'git-branch',
  },
  {
    title: 'Conversation Replay',
    description: 'Replay any conversation in the exact order messages occurred for debugging or analysis.',
    icon: 'play',
  },
  {
    title: 'Access Control',
    description: 'User-based ownership and sharing with fine-grained permissions for secure multi-tenant and multi-agent use.',
    icon: 'lock',
  },
  {
    title: 'AI Stack Native',
    description: 'Designed for Quarkus LangChain4j and Spring AI.',
    icon: 'stack',
  },
];

const icons: Record<string, string> = {
  database: 'M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4',
  play: 'M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
  'git-branch': 'M6 3v12 M18 9a3 3 0 100-6 3 3 0 000 6z M6 21a3 3 0 100-6 3 3 0 000 6z M18 9a9 9 0 01-9 9',
  search: 'M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z',
  lock: 'M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z',
  activity: 'M22 12h-4l-3 9L9 3l-3 9H2',
  stack: 'M12 2L2 7l10 5 10-5-10-5z M2 17l10 5 10-5 M2 12l10 5 10-5',
};
---

<BaseLayout title="Memory Service">
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-b from-primary-50 to-white dark:from-surface-900 dark:to-surface-950">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 sm:py-32">
      <div class="text-center">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight text-balance">
          <span class="text-gray-900 dark:text-white">Persistent Memory for</span>
          <br />
          <span class="gradient-text">AI Agents</span>
        </h1>
        <p class="mt-6 text-lg sm:text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto text-balance">
          A backend service that solves the memory problem for AI agents.
          Store conversation history, replay sessions, fork conversations,
          and perform semantic search across your previous conversations.
        </p>
        <div class="mt-10 flex flex-col sm:flex-row gap-4 justify-center">
          <a href={`${basePath}docs/getting-started/`} class="btn-primary text-lg px-8 py-3">
            Get Started
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
          <a
            href="https://github.com/chirino/memory-service"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-outline text-lg px-8 py-3"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
            </svg>
            View on GitHub
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 sm:py-32">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white">
          Everything AI Agents Need
        </h2>
        <p class="mt-4 text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          Built from the ground up to handle the unique requirements of AI agent memory management.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map(feature => (
          <div class="card p-6">
            <div class="w-12 h-12 rounded-lg gradient-bg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icons[feature.icon]} />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
              {feature.title}
            </h3>
            <p class="text-gray-600 dark:text-gray-400">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

